        <script><![CDATA[(function executeRule(current, previous /*null when async*/) {

	var getUserName = current.user.name;
	gs.info('test UserName: '  + getUserName);
	// Lấy ra array của group name bị thay đổi
	var arrGroups = [];
    var getMyGroups = new GlideRecord('sys_user_grmember');
    getMyGroups.addEncodedQuery('GOTOuser.nameLIKE' + current.user.name);
    getMyGroups.query();
    while (getMyGroups.next()) {
        arrGroups.push(getMyGroups.group.name.toString());
    }
	
    var grNeedIts = new GlideRecord('x_58872_needit_needit');
    grNeedIts.addEncodedQuery('sys_created_by=' + current.user.user_name);
    grNeedIts.query();
    while (grNeedIts.next()) {
        grNeedIts.setValue('groups_of_creator', arrGroups);
		grNeedIts.update();
    }

})(current, previous);]]></script>
