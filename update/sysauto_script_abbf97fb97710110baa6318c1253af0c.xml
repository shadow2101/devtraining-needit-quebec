        <script><![CDATA[var gr = new GlideRecord('sys_user');
gr.get(gs.getUserID());
var trees = [];
getTrees(gr.department.parent);
gs.info("User : " + gs.getUserDisplayName() + "\n Test department: " + gr.department.name + "\n Trees: " + trees);

function getTrees(name) {
    var grDpm = new GlideRecord('cmn_department');
    grDpm.addQuery('sys_id', name);
    grDpm.query();
    while (grDpm.next()) {
        trees.push(' '+ grDpm.name );
        getTrees(grDpm.parent);
    }
}]]></script>
